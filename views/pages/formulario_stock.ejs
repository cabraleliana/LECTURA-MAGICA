<form id="stock">

    <div class="form-group px-0 d-flex justify-content-between align-items-center">
        <label for="Descripcion" class="col-4">Libro</label>
            <select name="libro" id="libro"  class="ancho1 campo"
             data-valor="<%=data[0] ? data[0].id_libro : '' %>" >
             <!-- onchange="cargar_sucursales_por_libro(this, 'sucursal')" -->
                <option value="">
                    Seleccione libro
                </option>
            </select>
    </div>

    <div class="form-group px-0 d-flex justify-content-center align-items-center">
        <label for="precio" class="col-4">Cantidad</label>
        <input type="text" name="cantidad" value="<%=data[0] ? data[0].cantidad : '' %>" class="form-control campo" id="cantidad"
            placeholder="Cantidad">
    </div>

    <div class="form-group px-0 d-flex justify-content-center align-items-center">
        <label for="sexo" class="col-4">Sucursal</label>
            <select name="sucursal" id="sucursal"  class="ancho1 campo"
             data-valor="<%=data[0] ? data[0].id_sucursal : '' %>">
                    <option value="">
                        Seleccione sucursal
                    </option>
            </select>
    </div>
    
    <div class="d-flex">
        <button type="button" class="btn btn-secondary btn-block" onclick="limpiar_campos('.campo'); nuevo_registro('#id_stock')">Nuevo</button>
        <!-- limpiar campos limpia los valores de los input de la clase campo  y a su vez nuevo usuario le setea un valor 0 a un input oculto para que cuando demos guardar se sepa que es un nuevo usuario y que no es una modificacion -->
        <button type="button" class="btn btn-secondary btn-block" onclick="guardar_stock()" >Guardar</button>
        <!-- aca hacemos la logica de preguntar que valor tiene el input oculto , si es cero , entonces es POST y es el id del usuario entonces es un PUT -->
        <input type="hidden" id="id_stock" value="<%=data[0] ? data[0].id : '0' %>">
    </div>

</form>